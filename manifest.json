{
	"manifest_version": 2,
	"name": "UoM Blackboard Enhancement",
	"version": "0.0.2",
	"description": "Improve user experience of Blackboard of the University of Manchester.",
    "author": "RyanXin",
	"homepage_url": "https://www.ryanxin.cn",
	"omnibox": { "keyword" : "blackboard" },
	"icons": { "128": "uombben-icon.png" },
	"page_action": {
		"default_icon": "uombben-icon.png",
		"default_title": "UoM Blackboard Enhancement",
		"default_popup": "popup.html"
	},
	"content_scripts": [
        {
			"matches": ["https://online.manchester.ac.uk/*"],
			"js": ["js/main.js"],
			"css": ["css/Courses.css", "css/LiveSessions.css"],
			"run_at": "document_start"
		}
	],
	"permissions": [ "storage" ],
	"web_accessible_resources": ["js/inject.js"],
	"background": { "scripts": ["js/background.js"] },
	"options_page": "options.html",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}